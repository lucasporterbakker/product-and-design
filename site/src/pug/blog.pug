---
title: Onix
headerLinkBlog: active
---
extends layouts/layout
block content
	// blog
	.section.blog
		.section.blog__main
			.blog__container.container
				.blog__image
					img(src="img/blog-photo.jpg" alt="")
				.blog__wrap
					.blog__stage Feature post
					h1.blog__title.h1 Everything Onix weekly report
					.blog__info Onix delivers tamper-proof inputs, outputs, and computations to support advanced smart contracts on any blockchain
					a.button.blog__button(href="blog-details.html")
						span Read more
			.blog__lines
				img(src="img/lines-1.svg" alt="")
		.blog__wrapper
			.blog__container.container
				.blog__list
					mixin blogCard(image, title, content, color)
						// card
						a.blog__card.card(href="blog-details.html" data-aos="fadeInDown" data-aos-duration="800")
							+cardStyle(color)
							.card__inner
								.blog__subtitle.h3=title
								.blog__content=content
								.blog__preview
									img(src=image alt="")
								.blog__foot
									.blog__more(style='color:' + color) Read more
									.blog__arrow
										+i('arrow-right')
					+blogCard("img/blog/photo-1.png", "Globally-accesible, transformational API", "Your data can be transformed, organized, and shared across applications for anyone to query with just Your data can be transformed, organized, and shared across applications for anyone to query with just", "#6F5BEB")
